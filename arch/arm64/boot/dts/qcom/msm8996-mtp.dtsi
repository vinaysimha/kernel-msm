#include "msm8996.dtsi"

/ {
	aliases {
		serial0 = &blsp2_uart1;
	};

	chosen {
		stdout-path = "serial0";
	};

	soc {
		serial@75b0000 {
			status = "okay";
		};

		mdss@900000 {
			status = "okay";

			mdp@901000 {
				status = "okay";
			};

			dsi@994000 {
				status = "okay";

				qcom,dual-dsi-mode;
				qcom,master-dsi;
				qcom,sync-dual-dsi;

				panel@0 {

					reg = <0>;
	                                compatible = "truly,otm8018b";

	                                avdd-supply = <&pm8994_l22>;
        	                        iovdd-supply = <&pm8994_s4>;

					reset-gpios = <&msmgpio 8 0>;
					bklt-pwm-gpios = <&msmgpio 9 0>;

                                	port {
                                        	panel0_in: endpoint {
                                                	remote-endpoint = <&dsi0_out>;
                                        	};
                                	};

				};

				ports {
					port@1 {
						endpoint {
							remote-endpoint = <&panel0_in>;
							data-lanes = <0 1 2 3>;
						};
					};
				};
			};

			dsi-phy@994400 {
				status = "okay";
			};

			dsi@996000 {
				status = "okay";

				qcom,dual-dsi-mode;
				qcom,sync-dual-dsi;

				link2: panel@0 {

					reg = <0>;
	                                compatible = "truly,otm8018b";

	                                avdd-supply = <&pm8994_l22>;
        	                        iovdd-supply = <&pm8994_s4>;

					reset-gpios = <&msmgpio 10 0>;
					bklt-pwm-gpios = <&msmgpio 11 0>;

					port {
						panel1_in: endpoint {
							remote-endpoint = <&dsi1_out>;
						};
					};
				};

				ports {
					port@1 {
						endpoint {
							remote-endpoint = <&panel1_in>;
							data-lanes = <0 1 2 3>;
						};
					};
				};
			};

			dsi-phy@996400 {
				status = "okay";
			};

		};
	};
};
